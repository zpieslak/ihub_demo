<% if contacts.length > 0 %>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Group</th>
      <th></th>
    </tr>
    <% contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%= link_to contact.group.name, contact.group rescue "Undefined" %></td>
        <td>
          <%= link_to 'Show', contact, :class => "btn btn-success" %>
          <%= link_to 'Edit', edit_contact_path(contact), :class => "btn btn-warning" %>
          <%= link_to 'Destroy', contact, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>There are no contacts</p>
<% end %>
